
@model Pizze

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Pizza</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Immagine">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Pizza
            </p>
            <p>
                <strong>Contenuto:</strong>
                @Model.Descrizione
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.Prezzo
            </p>
        </div>
    </div>
</div>
